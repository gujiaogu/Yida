<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:gravity="center_vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceId"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vendorId"
        android:layout_below="@id/deviceId"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collect_item_status"
        android:layout_alignTop="@id/vendorId"
        android:layout_toRightOf="@id/vendorId"
        android:layout_marginLeft="16dp"
        android:textColor="@color/green"
        android:id="@+id/status"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_keyboard_arrow_right_black_24dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>